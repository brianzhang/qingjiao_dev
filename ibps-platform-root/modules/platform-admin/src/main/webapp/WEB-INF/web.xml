	<session-config>
		<session-timeout>1</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>404</error-code>
		<location>/get404.htm</location>
	</error-page>
	<error-page>
		<error-code>400</error-code>
		<location>/get400.htm</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/get403.htm</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error.htm</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error.htm</location>
	</error-page>
</web-app>