<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2.5.xsd"
	version="2.5">
	<display-name>ibps-platform-admin</display-name>
	<jsp-config>
		<taglib>
			<taglib-uri>http://www.bpmhome.cn/functions</taglib-uri>
			<taglib-location>/WEB-INF/tld/LCTag.tld</taglib-location>
		</taglib>
	</jsp-config>
	
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>webapp.root</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:conf/ibps-context.xml</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:conf/log4j.xml</param-value>
	</context-param>
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>com.lc.ibps.base.web.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>*.htm</url-pattern>
		<url-pattern>*.json</url-pattern>
		<url-pattern>*.xml</url-pattern>
	</filter-mapping>
	
	<!-- shiro start -->
	<filter>
		<filter-name>springFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
        <init-param>  
        	<param-name>targetFilterLifecycle</param-name>  
			<param-value>true</param-value>  
        </init-param>
	</filter>
    <filter-mapping>
        <filter-name>springFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
		<filter-name>springFilterChain</filter-name>
		<url-pattern>*.htm</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>ERROR</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springFilterChain</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springFilterChain</filter-name>
		<url-pattern>/logout</url-pattern>
	</filter-mapping>
    
    <filter>
		<filter-name>requestThreadFilter</filter-name>
		<filter-class>com.lc.ibps.web.filter.RequestThreadFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>requestThreadFilter</filter-name>
		<url-pattern>*.htm</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>com.lc.ibps.base.web.servlet.SpringMvcServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:conf/ibps-web-action.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>
	<servlet>  
        <servlet-name>initSocketServlet</servlet-name>  
        <servlet-class>com.lc.ibps.components.im.servlet.InitSocketServlet</servlet-class>  
        <!--<load-on-startup>3</load-on-startup>-->
    </servlet>
    <servlet>
		<servlet-name>ValidCode</servlet-name>
		<servlet-class>com.lc.ibps.base.web.servlet.ValidCode</servlet-class>
        <!--<load-on-startup>3</load-on-startup>-->
	</servlet>
	<servlet-mapping>
		<servlet-name>ValidCode</servlet-name>
		<url-pattern>/servlet/ValidCode</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>pinyinServlet</servlet-name>
		<servlet-class>com.lc.ibps.base.web.servlet.PinyinServlet</servlet-class>
        <!--<load-on-startup>3</load-on-startup>-->  
	</servlet>
	<servlet-mapping>
		<servlet-name>pinyinServlet</servlet-name>
		<url-pattern>/pinyinServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>camelServlet</servlet-name>
		<servlet-class>com.lc.ibps.base.web.servlet.CamelServlet</servlet-class>
        <!--<load-on-startup>3</load-on-startup>-->  
	</servlet>
	<servlet-mapping>
		<servlet-name>camelServlet</servlet-name>
		<url-pattern>/camelServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DruidStatView</servlet-name>
		<servlet-class>com.alibaba.druid.support.http.StatViewServlet</servlet-class>
        <!--<load-on-startup>3</load-on-startup>-->  
		<init-param>
			<param-name>resetEnable</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>DruidStatView</servlet-name>
		<url-pattern>/druid/*</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>DruidWebStatFilter</filter-name>
		<filter-class>com.alibaba.druid.support.http.WebStatFilter</filter-class>
		<init-param>
			<param-name>exclusions</param-name>
			<param-value>*.js,*.gif,*.jpg,*.png,*.css,*.ico,/druid/*</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>DruidWebStatFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.lc.ibps.base.web.listener.StartupListner</listener-class>
	</listener>
	
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<error-page>
		<error-code>404</error-code>
		<location>/get404.htm</location>
	</error-page>
	<error-page>
		<error-code>400</error-code>
		<location>/get400.htm</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/get403.htm</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error.htm</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error.htm</location>
	</error-page>
</web-app>